
@{
    ViewBag.Title = "记账信息";
    Layout = "~/Views/Shared/_Content.cshtml";
}
@section Scripts{
    <script>
        $(function () {
            $('#dg').iDatagrid({
                url: '/Assets/AccountBook/GetDataList',
                onDblClickRow: function (index, row) {
                    Edit(row.Id);
                },
                columns: [[
                    { field: 'Id', checkbox: true },
                    { field: 'BookName', title: '账本', halign: 'center', align: 'center', width: 100 },
                    { field: 'BillType', title: '收/支', halign: 'center', align: 'center', width: 100 },
                    {
                        field: 'PayType', title: '类型', halign: 'center', align: 'center', width: 100, formatter: function (value, row, index) {
                            if (row.BillType == '收入')
                                return row.BillTypeIncome;
                            else
                                return row.BillTypeOutput;
                        }
                    },
                    { field: 'PayTime', title: '支付时间', halign: 'center', align: 'center', width: 150 },
                    {
                        field: 'Money', title: '金额', halign: 'center', align: 'center', width: 80, formatter: function (value, row, index) {
                            return row.CurrencyType + row.Money;
                        }
                    },
                    { field: 'Remark', title: '备注', halign: 'center', align: 'center', width: 80 },
                    {
                        field: 'option', title: '操作', halign: 'center', align: 'center', formatter: function (value, row, index) {
                            var str = "<div class='option_col'>";
                            str += "<a href='#' onclick='Edit(\"" + row.Id + "\")'>编辑</a>|";
                            str += "<a href='#' onclick='Del([\"" + row.Id + "\"])'>删除</a>";
                            str += "</div> ";
                            return str;
                        }
                    }
                ]]
            });

        });

        //点击编辑
        function Edit(id) {
            doForm({
                url: "/Assets/AccountBook/Edit?id=" + id,
                width: 600,
                height: 350,
                afterSuccess: function (data) {
                    $('#dg').datagrid('reload');
                }
            });
        }
        //点击删除
        function Del(ids) {
            if (ids.length > 0) {
                top.$.messager.confirm('提示', '你确定要所选' + ids.length + '条数据吗？', function (r) {
                    if (r) {
                        ajaxPost({//是否启用
                            url: '/Assets/AccountBook/Delete',
                            data: { ids: ids },
                            success: function (data) {
                                if (data.isSuccess) {
                                    $('#dg').datagrid('reload');
                                    $.messager.alert('提示', data.message, 'info');
                                }
                                else {
                                    $.messager.alert('提示', data.message, 'error');
                                }
                            }
                        });
                    }
                });
            }
        }
        //点击删除按钮
        function Del_Btn() {
            var rows = $('#dg').datagrid('getSelections');
            var ids = getAttrByArr(rows, 'Id');
            Del(ids);
        }

        //查询
        function Query() {
            var mm = top;
            var dataForSave = $("#searchForm").formtojsonObj();

            $('#dg').datagrid('load', dataForSave);
        }

    </script>
}

@section Css{
    <style>
    </style>
}
<table id="dg"></table>
<div id="searchDiv" class="searchDiv">
    <form id="searchForm">
        <table class="searchTable">
            <tr>
                <td><span>归属：</span><input type="text" name="UserId" class="easyui-combobox" data-options="url:'/System/SysUser/GetDataForCombo',panelHeight:'auto',width:120,multiple:true" /></td>
                <td><span>状态：</span><input type="text" name="IsUse" class="easyui-combobox" data-options="url:'/System/SysDict/GetDictByCode?strCode=UseState',valueField:'DictCode',textField:'DictText',panelHeight:'auto',width:120,multiple:true" /></td>
                <td><span>卡名称：</span><input type="text" name="CardName" class="sr_input" /></td>
                <td><a href="#" class="easyui-linkbutton" iconCls="icon-search" onclick="Query()">查询</a></td>
            </tr>
        </table>
    </form>
    <table class="toolTable">
        <tr>
            <td>
                <a href="javascript:void(0);" class="easyui-linkbutton" iconCls="icon-add" plain="true" onclick="Edit()">新增</a>
                <a href="javascript:void(0);#" class="easyui-linkbutton" iconCls="icon-remove" plain="true" onclick="Del_Btn()">删除</a>
            </td>
            @*<td>
                    <div class="datagrid-btn-separator">
                    </div>
                </td>*@
        </tr>
    </table>
</div>
